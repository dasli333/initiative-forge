---
import AuthLayout from "@/layouts/AuthLayout.astro";
import { RegisterForm } from "@/components/auth/RegisterForm";

// Note: This page will handle server-side session checks in backend implementation phase
// For now, we just render the register form
---

<AuthLayout title="Register - Initiative Forge">
  <RegisterForm client:load />

  <p class="mt-6 text-center text-sm text-slate-400">
    Already have an account?{" "}
    <a
      href="/auth/login"
      class="font-semibold text-blue-400 hover:text-blue-300 transition-colors"
    >
      Sign in here
    </a>
  </p>
</AuthLayout>
