---
import MainLayout from "../layouts/MainLayout.astro";

export const prerender = false;

// Mock campaigns data for testing
const campaigns = [
  { id: "1", name: "Lost Mines of Phandelver" },
  { id: "2", name: "Curse of Strahd" },
  { id: "3", name: "Storm King's Thunder" },
];
---

<MainLayout title="Home - Initiative Forge" campaigns={campaigns}>
  <div class="container mx-auto max-w-7xl p-8">
    <div class="space-y-6">
      <div>
        <h1 class="text-4xl font-bold text-foreground">Welcome to Initiative Forge</h1>
        <p class="mt-2 text-lg text-muted-foreground">Your D&D 5e combat management companion</p>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <div class="rounded-lg border border-border bg-card p-6 shadow-sm">
          <h2 class="text-xl font-semibold text-card-foreground">My Campaigns</h2>
          <p class="mt-2 text-sm text-muted-foreground">Manage your D&D campaigns and characters</p>
        </div>

        <div class="rounded-lg border border-border bg-card p-6 shadow-sm">
          <h2 class="text-xl font-semibold text-card-foreground">Monsters Library</h2>
          <p class="mt-2 text-sm text-muted-foreground">Browse and search through D&D 5e monsters</p>
        </div>

        <div class="rounded-lg border border-border bg-card p-6 shadow-sm">
          <h2 class="text-xl font-semibold text-card-foreground">Spells Library</h2>
          <p class="mt-2 text-sm text-muted-foreground">Explore D&D 5e spells and their effects</p>
        </div>
      </div>

      <div class="rounded-lg border border-primary bg-primary/10 p-6">
        <h3 class="font-mono text-lg font-semibold text-primary">Layout Test</h3>
        <p class="mt-2 text-sm text-foreground">
          This page demonstrates the main layout with sidebar navigation, campaign selector, and dark mode theme with
          emerald-green accents.
        </p>
        <div class="mt-4 space-y-2">
          <p class="text-sm text-foreground">
            <span class="font-mono font-semibold">Font Test:</span>
            This text uses Inter font
          </p>
          <p class="font-mono text-sm text-foreground">Numbers in monospace: 123456789</p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
