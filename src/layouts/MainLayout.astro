---
import "../styles/global.css";
import { Sidebar } from "@/components/Sidebar";

interface Props {
  title?: string;
  campaigns?: Array<{ id: string; name: string }>;
}

const {
  title = "Initiative Forge",
  campaigns = []
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="h-full overflow-hidden">
    <!-- Minimum width warning -->
    <div
      class="fixed left-0 top-0 z-50 hidden w-full bg-destructive p-4 text-center text-sm font-medium text-white max-[1023px]:block"
      role="alert"
    >
      Initiative Forge requires a minimum screen width of 1024px for optimal experience.
    </div>

    <div class="flex h-full">
      <!-- Sidebar -->
      <Sidebar client:load campaigns={campaigns} currentPath={currentPath} />

      <!-- Main Content -->
      <main class="flex-1 overflow-auto">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
