---
import "../styles/global.css";
import { Sidebar } from "@/components/Sidebar";
import { SkipToContent } from "@/components/SkipToContent";
import { Toaster } from "@/components/ui/sonner";

interface Props {
  title?: string;
}

const { title = "Initiative Forge" } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="h-full overflow-hidden bg-slate-950">
    <!-- Skip to main content link for accessibility -->
    <SkipToContent client:load />

    <div class="flex h-full">
      <!-- Sidebar with navigation -->
      <Sidebar client:load currentPath={Astro.url.pathname} />

      <!-- Main Content Area -->
      <main id="main-content" tabindex="-1" class="flex-1 ml-60 bg-slate-950 min-h-screen p-4 md:p-8 overflow-auto">
        <slot />
      </main>
    </div>

    <!-- Toast notifications -->
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
